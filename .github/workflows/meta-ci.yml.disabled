name: HoraeMeta CI

on:
  push:
    branches:
      - main
    paths:
      - 'horaemeta/**'
      - '.github/workflows/meta-ci.yml'
  pull_request:
    paths:
      - 'horaemeta/**'
      - '.github/workflows/meta-ci.yml'
  workflow_dispatch:

jobs:
  style-check:
    runs-on: ubuntu-latest
    timeout-minutes: 5
    steps:
      - uses: actions/checkout@v4
      - working-directory: ./horaemeta
        run: |
          make install-tools
          make check

  unit-test:
    runs-on: ubuntu-latest
    timeout-minutes: 10
    steps:
      - uses: actions/checkout@v4
      - working-directory: ./horaemeta
        run: |
          make install-tools
          make test

  integration-test:
    runs-on: ubuntu-latest
    timeout-minutes: 60
    steps:
      - uses: actions/checkout@v4
      - working-directory: ./integration_tests
        run: |
          sudo apt install -y protobuf-compiler
          make run
